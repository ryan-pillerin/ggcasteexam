                    <label for="mobilenumber" class="col-form-label  ms-5" id=mobile></label>    
                </div>       
                 
                

        <button type="button" id="btnprint" class="btn btn-primary w-auto mt-3 px-5 donotinclude" onclick="window.print()">
                    Print
        </button>
                    
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $('#btnregister').click(function(e) {
        e.preventDefault()
        let courseDetails = null

        /**
         *  Desired Course
         * */
         let course = $('#cmbcourse :selected').text()
        $('#course-label').html(course).css({
            'text-transform': 'uppercase'
        })

        /**
         * Fullname
         * */
        let firstname = $('#firstname').val()
        let lastname = $('#lastname').val()
        let middlename = $('#middlename').val()

        $('#fullname').html(lastname + ', ' + firstname + ' ' + middlename).css({
            'text-transform': 'uppercase'
        })
        /**
         * Fulladdress
         * */
        let barangay = $('#cmbbarangay :selected').text()
        let municipality = $('#cmbmunicipality :selected').text()
        let province = $('#cmbprovince :selected').text()

        $('#fulladdress').html(barangay + ', ' + municipality + ', ' + province).css({
            'text-transform': 'uppercase'
        })

        /**
         * Email Address
         * */
        let email = $('#emailadd').val()
        
        $('#email').html(email)
     
         /**
        * Mobile Number
         * */
        let mobile = $('#mobilenumber').val()

        $('#mobile').html(mobile)
    });
</script>
