<div class="container">
    <div class="card" style="width: 18rem md-5 ">
        <div class="card-header mt-2 text-center" style="background-color: rgb(250, 255, 255);">
            <div class="row">
                <div class="col-12 text-center">
                    <img src="/img/header.jpg" class="img-fluid" style="width: 75%;height: 120px;"  alt="..."> 
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="col  fs-2" style="font-family:Century Gothic,CenturyGothic,AppleGothic,sans-serif;text-align: center;"> 
                GGCAST ENTRANCE EXAM REGISTRATION
                </div>
                <div class="row"></div>
                <div class="text-start">
                    <div class=" mb-3">
                    <label for="course" class="col-form-label">Desired Course:</label>
                    <div class=" mb-3">
                    <label for="course" class="col-form-label ms-5" id=course-label></label> 
                    <div class="row"></div>                                          
                    <label for="name" class="col-form-label" id="name">Full Name:</label>
                    <div class="row"></div> 
                    <label for="fullname" class="col-form-label  ms-5" id=fullname></label>  
                    <div class="row"></div>
                    <label for="address" class="col-form-label" id="address">Address:</label>
                    <div class="row"></div>    
                    <label for="address" class="col-form-label  ms-5" id=fulladdress></label>
                    <div class="row"></div>
                    <label for="contact" class="col-form-label" id="address">Contact Details:</label>
