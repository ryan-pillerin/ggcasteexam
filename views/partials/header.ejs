<% if ( page != 'login' && page != 'enrollment' ) { %>
<nav class="navbar navbar-dark bg-success">
    <div class="container-fluid">
        <div class="navbar-brand">
            <a href="#mainmenu" class="btn text-white" data-bs-toggle="offcanvas" aria-controls="mainmenu">
                <span class="material-icons">
                    menu
                </span>
            </a>
            <%= pageTitle %>
        </div>
        <div class="btn-group">
            <button class="btn dropdown-toggle text-white" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <img class="rounded-circle z-depth-2 mx-3" style="width: 40px;" alt="100x100" src="https://mdbootstrap.com/img/Photos/Avatars/img%20(31).jpg" data-holder-rendered="true">
                Hi <%= user.firstname %>
            </button>
            <ul class="dropdown-menu dropdown-menu-end text-center">
                <a class="btn dropdown-menu-item" href="#">
                    <span class="material-icons align-bottom">
                        logout
                    </span>
                    Logout
                </a>
            </ul>
          </div>
    </div>
</nav>

<div class="offcanvas offcanvas-start p-3" tabindex="-1" id="mainmenu" aria-labelledby="mainmenuLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="mainmenuLabel">
            <img class="img-thumbnail w-25" style="border:none;" src="/img/ggcast-logo.jpg"> 
            Welcome to GGCAST
        </h5>
      <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="container-fluid">
            <ul class="list-group list-group-flush">
                <a href="/" class="list-group-item list-group-item-action">Dashboard</a>
                <a href="#settingMenu" data-bs-toggle="collapse" aria-expanded="false" aria-controls="settingMenu" class="list-group-item list-group-item-action">Settings</a>
                    <ul class="list-group list-group-flush collapse px-3" id="settingMenu">
                        <a href="/subjects" class="list-group-item list-group-item-action">Subjects</a>
                        <a href="/curriculum" class="list-group-item list-group-item-action">Curriculum</a>
                    </ul>
            </ul>
        </div>
    </div>
</div>
<% } %>