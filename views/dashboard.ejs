<nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <span class="material-icons d-inline-block align-text-top">
                dashboard
            </span>
            Dashboard - <%= user.username %>
        </a>
    </div>
</nav>

<!-- Content -->
<div class="container-fluid">
    
    <div class="row">
        <div class="col-md-12 p-3">
            <div class="card">
                <div class="card-header bg-success bg-gradient text-white">
                    <span class="material-icons d-inline-block align-text-top mx-2">people</span>
                    List of Accouts
                </div>
                <div class="card-body">
                    
                </div>
                <div class="row-fluid p-3">
                    <div class="col-md-12 text-end">
                        <button type="button" class="btn btn-success px-4" data-bs-toggle="modal" data-bs-target="#addaccountmodal">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12 p-3">
            <div class="card">
                <div class="card-header bg-success bg-gradient text-white">
                    <span class="material-icons d-inline-block align-text-top mx-2">people</span>
                    Facilicator Account
                </div>
                <div class="card-body">
                  <div class="card-text">
                        <!-- Return all list of facilitator account -->
                        <table class="table table-success table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Created Date</th>
                                    <th scope="col">Updated Date</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody id="facilitator-data">
                                <% for( var i = 0; i < data.length; i++ ) { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td><%= data[i].firstname + ' ' + data[i].lastname %></td>
                                    <td><%= data[i].createddate %></td>
                                    <td><%= data[i].updateddate %></td>
                                    <td class="text-center">
                                        <input class="form-check-input selected-facilitator" type="checkbox">
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                  </div>
                  <div class="row-fluid">
                      <div class="col-md-12 text-end">
                          <button type="button" class="btn btn-success px-4" data-bs-toggle="modal" data-bs-target="#exampleModal">Add</button>
                          <button type="button" class="btn btn-secondary px-3">Delete</button>
                      </div>
                  </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add New Facilitator</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form class="row g-3">
                <div class="col-md-6">
                    <label for="txtlastname" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="txtlastname" placeholder="Enter your last name">
                  </div>
                  <div class="col-md-6">
                    <label for="txtfirstname" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="txtfirstname" placeholder="Enter your first name">
                </div>
            </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" onclick="addFacilitatorData()">Save</button>
        </div>
      </div>
    </div>
</div>

<!-- Modal Add Account -->
<div class="modal fade" id="addaccountmodal" tabindex="-1" aria-labelledby="addaccountmodalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addaccountmodalLabel">Add New Account</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="mb-3">
                <select class="form-select" id="facilitator-account" aria-label="List of Facilitator Account">
                    <option selected>Select Facilitator</option>
                    <% for( var i = 0; i < data.length; i++ ) { %>
                        <option value="<%= data[i].id %>"><%= data[i].firstname + " " + data[i].lastname %></option>
                    <% } %>
                </select>
            </div>
            <div class="mb-3">                
                <input type="text" class="form-control" id="txtusername" placeholder="Enter your username">
            </div>
            <div class="mb-3">                
                <input type="password" class="form-control" id="txtpassword" placeholder="Enter your paassword">
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" onclick="">Save</button>
        </div>
      </div>
    </div>
</div>

<script type="text/javascript" src="/js/events/dashboard.js"></script> 