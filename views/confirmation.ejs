<div class="container">
    <div class="card" style="width: 18rem md-5 ">
        <div class="card-header mt-2 text-center" style="background-color: rgb(16, 172, 107);">
            <div class="row">
                <div class="col  fs-2" style="font-family: 'Bebas Neue';text-align: center;"> 
                CONFIRMATION
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-3" style="border-right: 1px solid #CCC">                   
                    <div class="text-center">
                        <img id="profilepic" src="https://picsum.photos/200/300?random=1" class="rounded-circle" style="width: 7rem;height: 7rem;" alt="..." >           
           
            <div class="row mt-5"></div>
                        <img src="/img/LOGO.png" class="img-fluid w-60 mt-5"  alt="..."> 
                    </div>
                </div>
                <div class="col-sm-9">
                    <form class="row g-3" action="/registration/registerstudent" method="post">
                        <!-- ROw 1 -->
                        <div class="row mt-3">
                            <div class="col-md-5">&nbsp;</div>
                            <div class="col-md-7">
                                <label for="cmbcourse" class="form-label">Desired Course</label>
                                <select class="form-select" id="cmbcourse" name="desiredcourse" aria-label="Desired Course">
                                    <option selected>Select Course...</option>
                                    <option value="BEED">Bachelor of Elementary Education</option>
                                    <option value="BPA">Bachelor in Public Administration</option>
                                    <option value="BSEDENG">Bachelor of Secondary Education Major in English</option>
                                    <option value="BSEDFIL">Bachelor of Secondary Education Major in Filipino</option>
                                    <option value="BSEDMAT">Bachelor of Secondary Education Major in Mathematics</option>
                                    <option value="BSOA">Bachelor of Science in Office Administration</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12" >
                                <label for="personalinfo" class="form-label w-100" style="border-bottom: 1px solid #000;">PERSONAL INFORMATION</label>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-4">                 
                                <label for="lasttname" class="form-label"style=padding-top:10px;>Last Name</label>
                                <input type="text" class="form-control" id="lastname" name="lastname">
                            </div>
                            <div class="col-md-4" style="padding-top: 10px;">
                                <label for="middlename" class="form-label">Middle Name</label>
                                <input type="text" class="form-control" id="middlename" name="middlename">
                            </div>
                            <div class="col-md-4">
                                  <label for="firstname" class="form-label" style="padding-top: 10px;">First Name</label>
                                  <input type="text" class="form-control" id="lastname" name="lastname">
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-md-12"style=padding-top:15px;>
                                <label for="inputAddress" class="form-label w-100" style="border-bottom: 1px solid #000;">ADDRESS</label>
                            </div>
                        </div>                       
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <label for="cmbprovince" class="form-label"style=padding-top:10px;>Province</label>
                                <select class="form-select" id="cmbprovince" name="province" aria-label="Province" onchange="changeMunicipality()">
                                    <option value="pro" selected> Select Province...</option>
                                    <option value="davor">Davao Oriental</option>
                                    <option value="davnor">Davao del Norte</option>
                                    <option value="davocc">Davao Occidental</option>
                                    <option value="davdeoro">Davao de Oro</option>
                                    <option value="davsur">Davao del Sur</option>
                                    <option value="others">Outside Region XI </option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="cmbmunicipality" class="form-label"style=padding-top:10px;>Municipality</label>
                                <select class="form-select" id="cmbmunicipality" name="municipality" aria-label="Municipality" onchange="changeBarangay()">
                                    <option value="mun" selected>Select Municipality...</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="cmbbarangay" class="form-label"style=padding-top:10px;>Barangay</label>
                                <select class="form-select" id="cmbbarangay" name="barangay" aria-label="Barangay" onchange="">
                                    <option value="bar" selected>Select Barangay...</option>
                                    

                                </select>
                            </div>
                        </div>
                        <div class="row mt-3"style=padding-top:15px;>
                            <div class="col-md-12"style="padding-bottom: 0px; ">
                                <label for="inputContact" class="form-label w-100" style="border-bottom: 1px solid #000;margin:0;padding: 0;">CONTACT INFORMATION</label>
                                <div id="contactHelp" class="form-text mt-2 " style="margin:0; padding:0;" >We'll never share your contact information with anyone else.</div>
                            </div>
                        </div> 
                        <div class="row mt-3">
                            <div class="col-md-6 ">                 
                                <label for="emailadd" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="emailadd" name="emailadd" placeholder="juan.delacruz@gmail.com"> 
                            </div>
                            <div class="col-md-6">
                                <label for="mobilenumber" class="form-label">Mobile Number</label>
                                <input type="text" class="form-control" id="mobilenumber" name="mobilenumber" placeholder="09123456789">
                            </div>
                        <div>
                    </div>                     
                        <div class="row">
                            <div class="col-lg-9 col-sm-12"></div>
                            <div class="col-lg-3 col-sm-12 text-center">
                                <button type="submit" class="btn btn-primary w-auto mt-3 px-5">Register</button>
                            </div>
                        </div>
                      </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>